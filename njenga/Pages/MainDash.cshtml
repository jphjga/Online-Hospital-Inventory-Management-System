@page
@model MainDashModel
@{
    ViewData["Title"] = "Main Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Main Dashboard</title>
    <link rel="stylesheet" href="css/MainDash.css">
    <link rel="stylesheet" href="~/css/maindashmodals.css">
</head>
<body>

    <!-- Institution Name Header -->
    <div class="institution-header">
        <h1>@Model.InstitutionName</h1>
    </div>

    <!-- Main Dashboard Container -->
    <div class="main-dash-container">
       
        <!-- Cards Container -->
        <div class="card-container">
        
            <div class="card-grid">
                <a asp-page="/Dashboard" class="card-link">
                    <div class="card">
                        <div class="card-content">
                            <h3>Stock Manager</h3>
                        </div>
                    </div>
                </a>
                <article class="card">
                    <a href="/Stocktaking" class="card-link">
                        <div class="card-content">
                            <h3>Stock Taking</h3>
                        </div>
                    </a>
                </article>

                <article class="card">
                    <a href="/Sales" class="card-link">
                        <div class="card-content">
                            <h3>Sales</h3>
                        </div>
                    </a>
                </article>

                <div class="card query-center-card" onclick="openQueryCenterModal();">
                    <div class="card-content">
                        <h3>Query Center</h3>
                    </div>
                </div>

                 <article class="card">
                    <a href="/Report" class="card-link">
                        <div class="card-content">
                            <h3>Report</h3>
                        </div>
                    </a>
                </article>             
            </div>
        </div>

    </div>

    <!-- User Profile Modal -->
    <div id="userProfileModal" class="modal" aria-hidden="true">
        <div class="modal-content">
            <h2>User Profile</h2>
            <ul class="modal-menu">
                <li><a href="#" onclick="openManageUserModal()">Manage User</a></li>
                <li><a href="#" onclick="logoutUser()">Log Out</a></li>
                <li><a href="#">Help</a></li>
            </ul>
        </div>
    </div>

   
    <!-- Query Center Modal -->
    <div id="queryCenterModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeQueryCenterModal()">&times;</span>
            <!-- Modal content goes here -->
            <h2>Query Center</h2>
            <div class="search-container">
                <input type="text" id="searchQuery" placeholder="Search product by name..." class="form-control" />
                <button id="searchButton" onclick="searchProducts()">Search</button>
            </div>
            <div id="searchResults"></div>
        </div>
    </div>
    

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; @DateTime.Now.Year Njenga | All Rights Reserved</p>
    </footer>
</body>
</html>
<script src="~/js/MainDash.js"></script>